<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="view_enrollment_form" model="ir.ui.view">
			<field name="name">a3roster.enrollment.form</field>
			<field name="model">a3roster.enrollment</field>
			<field name="arch" type="xml">
				<form string="Entollment">
					<header>
						<button string="Approve" states="created" name="enroll" type="object" class="oe_highlight" groups="a3.group_faculty"/>
						<button string="Drop" states="enrolled" name="drop" type="object" groups="a3.group_faculty"/>
						<button string="Request To Withdraw" states="enrolled" name="req_to_w" type="object" groups="a3.group_student"/>
						<button string="Request For a WP" states="enrolled" name="req_to_wp" type="object" groups="a3.group_faculty"/>
						<button string="Request For a WF" states="enrolled" name="req_to_wf" type="object" groups="a3.group_faculty"/>
						<button string="Request For IP" states="enrolled" name="req_to_ip" type="object" groups="a3.group_faculty"/>
						<field name="state" widget="statusbar" statusbar_visible="created,enrolled"/>
					</header>
					<header attrs="{'invisible': [('wstate', '!=', False)]}">
						<button string="Approve" states="wreq" name="app_w_adv" type="object" groups="a3.group_faculty"/>
						<button string="Approve" states="wadv" name="app_w_ins" type="object" groups="a3.group_faculty"/>
						<button string="Approve" states="wpreq" name="app_wp" type="object" groups="a3roster.group_roster_manager"/>
						<button string="Approve" states="wfreq" name="app_wf" type="object" groups="a3roster.group_roster_manager"/>
						<button string="Approve" states="ipreq" name="app_ip" type="object" groups="a3roster.group_roster_manager"/>
						<field name="wstate" widget="statusbar"/>
					</header>
					<sheet>
						<h1><field name="name"/></h1>
						<group name="info" string="General Information" col="4">
							<field name="student_id" options="{'no_quick_create': True, 'no_create_edit': True}"/>
							<field name="section_id" options="{'no_quick_create': True, 'no_create_edit': True}"/>
						</group>
						<group name="log" string="Log" col="4">
							<field name="create_uid"/>
							<field name="create_date"/>
							<field name="write_uid"/>
							<field name="write_date"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_enrollment_tree" model="ir.ui.view">
			<field name="name">a3roster.enrollment.tree</field>
			<field name="model">a3roster.enrollment</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<tree string="Entollments">
					<field name="student_id"/>
					<field name="term_id" invisible="1"/>
					<field name="school_id" invisible="1"/>
					<field name="discipline_id" invisible="1"/>
					<field name="state" invisible="1"/>
				</tree>
			</field>
		</record>
		<record id="action_enrollment" model="ir.actions.act_window">
			<field name="name">Entollments</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">a3roster.enrollment</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[]</field>
			<field name="context">{'group_by': ['term_id', 'school_id', 'discipline_id', 'section_id', 'state']}</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
				
				</p>
				<p>
				
				</p>
			</field>
		</record>
		<record id="action_enrollment_form_view" model="ir.actions.act_window.view">
			<field name="sequence" eval="2"/>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_enrollment_form"/>
			<field name="act_window_id" ref="action_enrollment"/>
		</record>
		<record id="action_enrollment_tree_view" model="ir.actions.act_window.view">
			<field name="sequence" eval="1"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_enrollment_tree"/>
			<field name="act_window_id" ref="action_enrollment"/>
		</record>
	</data>
</odoo>