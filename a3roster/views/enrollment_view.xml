<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="view_enrollment_form" model="ir.ui.view">
			<field name="name">a3roster.enrollment.form</field>
			<field name="model">a3roster.enrollment</field>
			<field name="arch" type="xml">
				<form string="Entollment">
					<field name="dtriggered" invisible="1"/>
					<field name="wtriggered" invisible="1"/>
					<field name="wptriggered" invisible="1"/>
					<field name="wftriggered" invisible="1"/>
					<field name="iptriggered" invisible="1"/>
					<header attrs="{'invisible': [('id', '=', False)]}">
						<button string="Enroll" states="created" name="enroll" type="object" class="oe_highlight" groups="a3roster.group_registrar"/>
						<button string="Drop" attrs="{'invisible': ['|', ('dtriggered', '=', True), ('state', '!=', 'enrolled')]}" name="drop" type="object" groups="a3.group_student"/>
						<button string="Request To Withdraw" attrs="{'invisible': ['|', ('wtriggered', '=', True), ('state', '!=', 'enrolled')]}" name="req_w" type="object" groups="a3.group_student"/>
						<button string="File a WP" attrs="{'invisible': ['|', ('wptriggered', '=', True), '|', ('wftriggered', '=', True), '|', ('iptriggered', '=', True), ('state', '!=', 'enrolled')]}" name="file_wp" type="object" groups="a3.group_faculty"/>
						<button string="File a WF" attrs="{'invisible': ['|', ('wptriggered', '=', True), '|', ('wftriggered', '=', True), '|', ('iptriggered', '=', True), ('state', '!=', 'enrolled')]}" name="file_wf" type="object" groups="a3.group_faculty"/>
						<button string="File an IP" attrs="{'invisible': ['|', ('wptriggered', '=', True), '|', ('wftriggered', '=', True), '|', ('iptriggered', '=', True), ('state', '!=', 'enrolled')]}" name="file_ip" type="object" groups="a3.group_faculty"/>
						<field name="state" widget="statusbar" statusbar_visible="enrolled"/>
					</header>
					<header attrs="{'invisible': ['|', ('dtriggered', '=', False), ('state', '!=', 'enrolled')]}">
						<button string="Confirm (irreversible)" name="confirm_drop" type="object" groups="a3.group_student"/>
						<button string="Cancel" states="enrolled" name="cancel_drop" type="object" groups="a3.group_student"/>
						<field name="dstate" widget="statusbar"/>
					</header>
					<header attrs="{'invisible': ['|', ('wtriggered', '=', False), ('state', 'not in', ['enrolled', 'withdrawn'])]}">
						<button string="Confirm" attrs="{'invisible': [('wstate', '!=', 'draft')]}" name="confirm_wrequest" type="object" groups="a3.group_student"/>
						<button string="Cancel" attrs="{'invisible': [('wstate', '!=', 'draft')]}" name="cancel_wrequest" type="object" groups="a3.group_student"/>
						<button string="Approve" attrs="{'invisible': [('wstate', '!=', 'wreq')]}" name="app_w_adv" type="object" groups="a3.group_faculty"/>
						<button string="Approve" attrs="{'invisible': [('wstate', '!=', 'wadv')]}" name="app_w_ins" type="object" groups="a3.group_faculty"/>
						<field name="wstate" widget="statusbar"/>
					</header>
					<header attrs="{'invisible': ['|', ('wptriggered', '=', False), ('state', '!=', 'enrolled')]}">
						<button string="Confirm" attrs="{'invisible': [('wpstate', '!=', 'draft')]}" name="confirm_wprequest" type="object" groups="a3.group_faculty"/>
						<button string="Cancel" attrs="{'invisible': [('wpstate', '!=', 'draft')]}" name="cancel_wprequest" type="object" groups="a3.group_faculty"/>
						<button string="Approve" attrs="{'invisible': [('wpstate', '!=', 'wpreq')]}" name="app_wp_dean" type="object" groups="a3.group_dean"/>
						<button string="Approve" attrs="{'invisible': [('wpstate', '!=', 'wpdean')]}" name="app_wp_reg" type="object" groups="a3roster.group_registrar"/>
						<field name="wpstate" widget="statusbar"/>
					</header>
					<header attrs="{'invisible': ['|', ('wftriggered', '=', False), ('state', '!=', 'enrolled')]}">
						<button string="Confirm" attrs="{'invisible': [('wfstate', '!=', 'draft')]}" name="confirm_wfrequest" type="object" groups="a3.group_faculty"/>
						<button string="Cancel" attrs="{'invisible': [('wfstate', '!=', 'draft')]}" name="cancel_wfrequest" type="object" groups="a3.group_faculty"/>
						<button string="Approve" attrs="{'invisible': [('wfstate', '!=', 'wfreq')]}" name="app_wf_dean" type="object" groups="a3.group_dean"/>
						<button string="Approve" attrs="{'invisible': [('wfstate', '!=', 'wfdean')]}" name="app_wf_reg" type="object" groups="a3roster.group_registrar"/>
						<field name="wfstate" widget="statusbar"/>
					</header>
					<header attrs="{'invisible': ['|', ('iptriggered', '=', False), ('state', '!=', 'enrolled')]}">
						<button string="Confirm" attrs="{'invisible': [('ipstate', '!=', 'draft')]}" name="confirm_iprequest" type="object" groups="a3.group_faculty"/>
						<button string="Cancel" attrs="{'invisible': [('ipstate', '!=', 'draft')]}" name="cancel_iprequest" type="object" groups="a3.group_faculty"/>
						<button string="Approve" attrs="{'invisible': [('ipstate', '!=', 'ipreq')]}" name="app_ip_dean" type="object" groups="a3.group_dean"/>
						<button string="Approve" attrs="{'invisible': [('ipstate', '!=', 'ipdean')]}" name="app_ip_reg" type="object" groups="a3roster.group_registrar"/>
						<field name="ipstate" widget="statusbar"/>
					</header>
					<sheet>
						<h1><field name="name"/></h1>
						<group name="info" string="General Information" col="4">
							<field name="student_id" options="{'no_quick_create': True, 'no_create_edit': True}"/>
							<field name="section_id" options="{'no_quick_create': True, 'no_create_edit': True}"/>
						</group>
						<group name="log" string="Log" col="4">
							<field name="create_uid"/>
							<field name="create_date"/>
							<field name="write_uid"/>
							<field name="write_date"/>
						</group>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>
		<record id="view_enrollment_tree" model="ir.ui.view">
			<field name="name">a3roster.enrollment.tree</field>
			<field name="model">a3roster.enrollment</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<tree string="Entollments">
					<field name="student_id"/>
					<field name="term_id" invisible="1"/>
					<field name="school_id" invisible="1"/>
					<field name="discipline_id" invisible="1"/>
					<field name="course_id" invisible="1"/>
					<field name="section_id" invisible="1"/>
					<field name="state" invisible="1"/>
				</tree>
			</field>
		</record>
		<record id="action_enrollment" model="ir.actions.act_window">
			<field name="name">Entollments</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">a3roster.enrollment</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[]</field>
			<field name="context">{'group_by': ['term_id', 'school_id', 'discipline_id', 'course_id', 'section_id', 'state']}</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
				
				</p>
				<p>
				
				</p>
			</field>
		</record>
		<record id="action_enrollment_form_view" model="ir.actions.act_window.view">
			<field name="sequence" eval="2"/>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_enrollment_form"/>
			<field name="act_window_id" ref="action_enrollment"/>
		</record>
		<record id="action_enrollment_tree_view" model="ir.actions.act_window.view">
			<field name="sequence" eval="1"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_enrollment_tree"/>
			<field name="act_window_id" ref="action_enrollment"/>
		</record>
	</data>
</odoo>