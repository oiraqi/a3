<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <!-- a3roster.section form view -->
        <record id="section_view_form" model="ir.ui.view">
            <field name="name">a3roster.section.view.form</field>
            <field name="model">a3roster.section</field>
            <field name="arch" type="xml">
                <form string="Section">
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group string="Section Information" col="4">
                            <field name="school_id" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="discipline_id" domain="[('school_id', '=', school_id)]" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="course_id" domain="[('discipline_id', '=', discipline_id)]" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="number"/>
                            <label for="semester" string="Semester &#38; Year"/>
                            <div>
                                <field name="semester" widget="radio" options="{'horizontal': True}" style="width: 65%"/>
                                <field name="year" style="width: 35%"/>
                            </div>
                            <field name="instructor_id" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            <label for="monday" string="Meeting Time"/>
                            <div>
                                <field name="monday" style="width: 10%"/>
                                <field name="tuesday" style="width: 10%"/>
                                <field name="wednesday" style="width: 10%"/>
                                <field name="thursday" style="width: 10%"/>
                                <field name="friday" style="width: 10%"/>
                                <field name="days" style="width: 20%"/>
                                <field name="start_timeslot" widget="float_time" style="width: 12%"/>
                                <field name="end_timeslot" widget="float_time" style="width: 12%"/>
                            </div>
                            <field name="room_id" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}" domain="[('type', 'in', ['classroom', 'lab'])]"/>
                        </group>
                        <notebook groups="a3.group_faculty,a3roster.group_registrar,a3.group_coordinator,a3.group_vpaa">
                            <page string="Enrolled Students" name="students">
                                <group>
                                    <field name="student_ids" nolabel="1">
                                        <tree>
                                            <field name="name"/>
                                            <field name="sid"/>
                                            <field name="email"/>
                                            <field name="program_id" widget="badge"/>
                                            <field name="advisor_id"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page string="Withdrwan Students" name="wstudents">
                                <group>
                                    <field name="withdrawn_enrollment_ids" nolabel="1">
                                        <tree>
                                            <field name="student_id"/>
                                            <field name="sid"/>
                                            <field name="program_id"/>
                                            <field name="state" widget="badge" string="Withdraw Grade"/>
                                            <field name="wdtime" string="Withdrawing Date &#38; Time"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page string="Dropped Students" name="students" nolabel="1" groups="a3roster.group_registrar">
                                <group>
                                    <field name="dropped_student_ids" nolabel="1">
                                        <tree>
                                            <field name="name"/>
                                            <field name="sid"/>
                                            <field name="program_id" widget="badge"/>
                                            <field name="wdtime" string="Dropping Date &#38;Time"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                        <group name="log" string="Log" col="4">
                            <field name="create_uid"/>
                            <field name="create_date"/>
                            <field name="write_uid"/>
                            <field name="write_date"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- a3roster.section tree view -->
        <record id="section_view_tree" model="ir.ui.view">
            <field name="name">a3roster.section.view.tree</field>
            <field name="model">a3roster.section</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Sections">
                    <field name="name"/>
                    <field name="instructor_id"/>
                    <field name="timeslot"/>
                    <field name="room_id"/>
                </tree>
            </field>
        </record>

        <!-- a3roster.section action window -->
        <record id="action_section" model="ir.actions.act_window">
            <field name="name">Sections</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">a3roster.section</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'group_by': ['term_id', 'school_id', 'discipline_id', 'course_id'], 'order_by': 'term_id desc'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create sections here
                </p>
                <p>
                    Created sections are organized by School, year, semester, discipline, and course
                </p>
            </field>
        </record>

    </data>

</odoo>