<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
    
        <!-- a3roster.section form view -->
        <record id="section_view_form" model="ir.ui.view">
            <field name="name">a3roster.section.view.form</field>
            <field name="model">a3roster.section</field>
            <field name="arch" type="xml">
                <form string="Section">
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group string="Section Information" col="4">
                            <field name="course_id" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="number"/>
                            <label for="semester" string="Semester &#38; Year"/>
                            <div>
                                <field name="semester" widget="radio" options="{'horizontal': True}" style="width: 65%"/>
                                <field name="year" style="width: 35%"/>
                            </div>
                            <field name="instructor_id" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            <field name="timeslot_id" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            <field name="classroom_id" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            <field name="syllabus"/>
                            <field name="school_id" invisible="1"/>
                            <field name="discipline_id" invisible="1"/>
                        </group>
                        <group name="log" string="Log" col="4">
                            <field name="create_uid"/>
                            <field name="create_date"/>
                            <field name="write_uid"/>
                            <field name="write_date"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- a3roster.section tree view -->
        <record id="section_view_tree" model="ir.ui.view">
            <field name="name">a3roster.section.view.tree</field>
            <field name="model">a3roster.section</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Sections">
                    <field name="name"/>
                    <field name="instructor_id"/>
                </tree>
            </field>
        </record>

        <!-- a3roster.section action window -->
        <record id="action_section" model="ir.actions.act_window">
            <field name="name">Sections</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">a3roster.section</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'group_by': ['school_id', 'year', 'semester', 'discipline_id', 'course_id']}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create sections here
                </p><p>
                    Created sections are organized by School, year, semester, discipline, and course
                </p>
            </field>
        </record>
    
    </data>
    
</odoo>