<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_process_form" model="ir.ui.view">
            <field name="name">a3performance.eval.process.form</field>
            <field name="model">a3performance.eval.process</field>
            <field name="arch" type="xml">
                <form string="Process">
                    <sheet>
                        <field name="faculty_id" invisible="1"/>
                        <field name="state" invisible="1"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group string="Faculty &#38; Evaluation Information" col="4">
                            <field name="school_id" readonly="1"/>
                            <field name="hiring_date"/>
                            <field name="rank" style="width: 75%"/>
                            <field name="srank_id" domain="[('rank', '=', rank)]" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}" style="width: 15%"/>
                            <field name="type" widget="radio" options="{'horizontal': true}"/>
                            <label for="from_semester" string="Evaluation Period"/>
                            <div class="o_address_format">
                                <field name="from_semester" widget="radio" options="{'horizontal': true}" style="width: 50%"/>
                                <field name="from_year" style="width: 25%"/>
                                <field name="to_semester" widget="radio" options="{'horizontal': true}" style="width: 50%"/>
                                <field name="to_year" style="width: 25%"/>
                            </div>
                            <field name="previous_evaluation"/>
                            <field name="previous_process_id" domain="[('from_year', '&lt;', from_year)]" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}" attrs="{'invisible': [('previous_evaluation', '=', False)], 'required': [('previous_evaluation', '=', True)]}"/>
                        </group>
                        <notebook>
                            <page name="ts" string="Teaching &#38; Supervision"/>
                            <page name="rp" string="Research &#38; Publication"/>
                            <page name="sd" string="Service &#38; Development"/>
                            <page name="ose" string="Overall Self-Evaluation">
                                <field name="overall_self_evaluation" nolabel="1" widget="html"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_process_tree" model="ir.ui.view">
            <field name="name">a3performance.eval.process.tree</field>
            <field name="model">a3performance.eval.process</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Processes">
                    <field name="name"/>
                    <field name="rank"/>
                    <field name="srank_id"/>
                    <field name="type"/>
                    <field name="ts_goal_progress" invisible="1"/>
                    <field name="rp_goal_progress" invisible="1"/>
                    <field name="sd_goal_progress" invisible="1"/>
                    <field name="ts_goal_achievement" string="TS Goals" widget="badge" decoration-danger="ts_goal_progress &lt; 30" decoration-warning="ts_goal_progress &gt;= 30 and ts_goal_progress &lt; 60" decoration-info="ts_goal_progress &gt;= 60 and ts_goal_progress &lt; 100" decoration-success="ts_goal_progress &gt;= 100"/>
                    <field name="rp_goal_achievement" string="RP Goals" widget="badge" decoration-danger="rp_goal_progress &lt; 30" decoration-warning="rp_goal_progress &gt;= 30 and rp_goal_progress &lt; 60" decoration-info="rp_goal_progress &gt;= 60 and rp_goal_progress &lt; 100" decoration-success="rp_goal_progress &gt;= 100"/>
                    <field name="sd_goal_achievement" string="SD Goals" widget="badge" decoration-danger="sd_goal_progress &lt; 30" decoration-warning="sd_goal_progress &gt;= 30 and sd_goal_progress &lt; 60" decoration-info="sd_goal_progress &gt;= 60 and sd_goal_progress &lt; 100" decoration-success="sd_goal_progress &gt;= 100"/>
                    <field name="state" invisible="1"/>
                </tree>
            </field>
        </record>
        <record id="action_process" model="ir.actions.act_window">
            <field name="name">Processes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">a3performance.eval.process</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Create an evaluation process
                </p>
            </field>
        </record>
        <record id="action_process_form_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_process_form"/>
            <field name="act_window_id" ref="action_process"/>
        </record>
        <record id="action_process_tree_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_process_tree"/>
            <field name="act_window_id" ref="action_process"/>
        </record>
    </data>
</odoo>