<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="view_module_form" model="ir.ui.view">
			<field name="name">ixlms.module.form</field>
			<field name="model">ixlms.module</field>
			<field name="arch" type="xml">
				<form string="Module">
					<sheet>
						<h1>
							<field name="name" default_focus="1" placeholder="Name..."/>
						</h1>
						<field name="lms_course_id" invisible="1"/>
						<group name="chapters" string="Chapters &#38; Timeline">
							<field name="chapter_ids" nolabel="1">
								<tree editable="bottom">
									<field name="sequence" widget="handle"/>
									<field name="name"/>									
									<field name="start_date"/>
									<field name="nsessions"/>
									<field name="module_id" invisible="1"/>									
								</tree>
							</field>
						</group>
						<group name="log" string="Log" col="4">
							<field name="create_uid"/>
							<field name="create_date"/>
							<field name="write_uid"/>
							<field name="write_date"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_module_tree" model="ir.ui.view">
			<field name="name">ixlms.module.tree</field>
			<field name="model">ixlms.module</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<tree string="Modules" editable="bottom">
					<field name="sequence" widget="handle"/>
					<field name="name"/>
					<field name="lms_course_id" invisible="1"/>
				</tree>
			</field>
		</record>
		<record id="action_module" model="ir.actions.act_window">
			<field name="name">Modules</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">ixlms.module</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[]</field>
			<field name="context">{}</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">

				</p>
				<p>

				</p>
			</field>
		</record>
		<record id="action_module_form_view" model="ir.actions.act_window.view">
			<field name="sequence" eval="2"/>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_module_form"/>
			<field name="act_window_id" ref="action_module"/>
		</record>
		<record id="action_module_tree_view" model="ir.actions.act_window.view">
			<field name="sequence" eval="1"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_module_tree"/>
			<field name="act_window_id" ref="action_module"/>
		</record>
	</data>
</odoo>