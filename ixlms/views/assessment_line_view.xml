<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="view_assessment_line_form" model="ir.ui.view">
			<field name="name">ixlms.assessment.line.form</field>
			<field name="model">ixlms.assessment.line</field>
			<field name="arch" type="xml">
				<form string="AssessmentLine" create="false">
					<sheet>
						<h1><field name="name"/></h1>						
						<div>
						<h1><field name="egrade"/></h1>
						</div>
						<group name="info" string="General Information" col="4">
							<field name="module_id"/>
							<field name="technique_id"/>
							<field name="submission_type"/>
							<field name="x_to_time" attrs="{'invisible': [('submission_type', '!=', 'online')]}"/>							
						</group>
						<group name="submissions" string="Submissions" attrs="{'invisible': [('submission_type', '!=', 'online')]}">
							<field name="submission_ids" readonly="1">
								<tree>
									<field name="create_date"/>
									<field name="create_uid"/>
									<field name="write_date"/>
									<field name="write_uid"/>
									<field name="team_id"/>
									<field name="assessment_line_ids" widget="many2many_tags"/>
									<field name="rgrade" avg="Average Grade"/>
									<button string="Open" name="get_submission" type="object" class="oe_highlight"/>
								</tree>
							</field>
						</group>
						<group name="grade" string="Grade" col="4">
							<field name="grade" style="width: 15%"/>
							<field name="bonus"/>
							<field name="penalty" attrs="{'invisible': [('submission_type', '!=', 'online')]}"/>							
						</group>
						<group name="log" string="Log" col="4">
							<field name="create_uid"/>
							<field name="create_date"/>
							<field name="write_uid"/>
							<field name="write_date"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_assessment_line_tree" model="ir.ui.view">
			<field name="name">ixlms.assessment.line.tree</field>
			<field name="model">ixlms.assessment.line</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<tree string="AssessmentLines" create="false">
					<field name="name"/>
					<field name="module_id" widget="badge"/>					
					<field name="egrade"/>
					<field name="max_grade"/>
					<field name="min_grade"/>
					<field name="avg_grade"/>
					<field name="wgrade"/>					
				</tree>
			</field>
		</record>
