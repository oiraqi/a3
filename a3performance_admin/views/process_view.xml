<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_process_form_admin" model="ir.ui.view">
            <field name="name">a3performance.eval.ad.process.form</field>
            <field name="model">a3performance.eval.process</field>
            <field name="inherit_id" ref="a3performance.eval.l.view_process_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="faculty_to_f2c" states="faculty" string="Submit To Committee" type="object" class="oe_highlight" groups="a3.group_faculty"/>
                        <button name="f2c_to_faculty" states="f2c" string="Bring Back" type="object" class="oe_highlight" groups="a3.group_faculty"/>
                        
                        <button name="f2c_to_committee" states="f2c" string="Accept" type="object" class="oe_highlight" groups="a3.group_committee_chair"/>
                        <button name="committee_to_f2c" states="committee" string="Return to Faculty" type="object" class="oe_highlight" groups="a3.group_committee_chair"/>
                        
                        <button name="committee_to_c2d" states="committee" string="Submit To Dean" type="object" class="oe_highlight" groups="a3.group_committee_chair"/>
                        <button name="c2d_to_committee" states="c2d" string="Bring Back To Committee" type="object" class="oe_highlight" groups="a3.group_committee_chair"/>
                        
                        <button name="c2d_to_dean" states="c2d" string="Receive from Committee" type="object" class="oe_highlight" groups="a3.group_dean"/>
                        <button name="dean_to_c2d" states="dean" string="Return To Committee" type="object" class="oe_highlight" groups="a3.group_dean"/>

                        <button name="dean_to_d2v" states="dean" string="Submit To VPAA" type="object" class="oe_highlight" groups="a3.group_dean"/>
                        <button name="d2v_to_dean" states="d2v" string="Bring Back" type="object" class="oe_highlight" groups="a3.group_dean"/>

                        <button name="d2v_to_vpaa" states="d2v" string="Receive from Dean" type="object" class="oe_highlight" groups="a3.group_vpaa"/>
                        <button name="vpaa_to_d2v" states="vpaa" string="Return To Dean" type="object" class="oe_highlight" groups="a3.group_vpaa"/>

                        <button name="vpaa_to_done" states="vpaa" string="Mark as Done" type="object" class="oe_highlight" groups="a3.group_vpaa"/>

                        <field name="state" widget="statusbar" statusbar_visible="faculty,committee,dean,vpaa,done"/>
                    </header>
                </xpath>
                <xpath expr="//group[@name='overall_self_eval']">                        
                    <group string="Committee's Overall Evaluation" groups="a3performance.group_committee_member,a3.group_dean,a3.group_vpaa">
                        <field name="committee_recommendation" widget="radio" options="{'horizontal': True}"/>
                        <field name="committee_feedback" widget="html"/>
                    </group>
                     <group string="Dean's Overall Evaluation" groups="a3.group_dean,a3.group_vpaa">
                        <field name="dean_recommendation" widget="radio" options="{'horizontal': True}"/>
                        <field name="dean_new_rank" widget="radio" options="{'horizontal': True}"/>
                        <field name="dean_new_srank_id" domain="[('rank', '=', dean_new_rank)]"/>
                        <field name="dean_feedback" widget="html"/>
                    </group>
                    <group string="VPAA's Overall Evaluation">
                        <field name="vpaa_decision" widget="radio" options="{'horizontal': True}"/>
                        <field name="vpaa_new_rank" widget="radio" options="{'horizontal': True}"/>
                        <field name="vpaa_new_srank_id"/>
                        <field name="vpaa_feedback" widget="html"/>
                    </group>
                </xpath>                 
            </field>
        </record>
        <record id="view_process_tree_admin" model="ir.ui.view">
            <field name="name">a3performance.eval.ad.process.tree</field>
            <field name="model">a3performance.eval.process</field>
            <field name="inherit_id" ref="a3performance.eval.l.view_process_tree"/>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sd_goal_progress']" position="after">                    
                    <field name="state" widget="badge"/>
                    <field name="vpaa_decision"/>
                    <field name="vpaa_new_rank"/>
                    <field name="vpaa_new_srank_id"/>                    
                </xpath>
            </field>
        </record>
    </data>
</odoo>