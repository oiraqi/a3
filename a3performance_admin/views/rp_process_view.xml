<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_rp_process_form" model="ir.ui.view">
            <field name="name">a3performance.eval.rp.process.form</field>
            <field name="model">a3performance.eval.process</field>
            <field name="inherit_id" ref="view_process_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='rp']" position="inside">                    
                    <notebook>
                        <page string="Goals &#38; KPIs">
                            <field name="rp_goal_progress" widget="progressbar"/>
                        </page>
                        <page string="Activities">
                        </page>
                        <page string="Journal Articles">
                        </page>
                        <page string="Books &#38; Monographs">
                        </page>
                        <page string="Papers in Proceedings">
                        </page>
                        <page string="Presentations">
                        </page>
                        <page string="Summary">
                        </page>                      
                    </notebook>
                </xpath>
            </field>
        </record>
    </data>
</odoo>