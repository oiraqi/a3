<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="view_building_form" model="ir.ui.view">
			<field name="name">a3.building.form</field>
			<field name="model">a3.building</field>
			<field name="arch" type="xml">
				<form string="Building">
					<sheet>
						<h1>
							<field name="name" default_focus="1" placeholder="Name..." style="width: 30%"/>
						</h1>
						<group name="owner_rooms" col="4">
							<field name="school_id" options="{'no_quick_create': True, 'no_create_edit': True}" string="Owner"/>
							<field name="capacity"/>
							<field name="classrooms"/>
							<field name="labs"/>
							<field name="offices"/>
							<field name="general_rooms"/>
							<field name="room_ids" colspan="4" context="{'default_school_id': school_id}">
								<tree editable="bottom">
									<field name="number"/>
									<field name="type" widget="badge"/>
									<field name="capacity"/>
									<field name="school_id" invisible="1"/>
								</tree>
							</field>
						</group>
						<group name="log" string="Log" col="4">
							<field name="create_uid"/>
							<field name="create_date"/>
							<field name="write_uid"/>
							<field name="write_date"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_building_tree" model="ir.ui.view">
			<field name="name">a3.building.tree</field>
			<field name="model">a3.building</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<tree string="Buildings">
					<field name="name"/>
					<field name="classrooms"/>
					<field name="labs"/>
					<field name="offices"/>
					<field name="general_rooms"/>
					<field name="capacity"/>
					<field name="school_id" invisible="1"/>
				</tree>
			</field>
		</record>
		<record id="action_building" model="ir.actions.act_window">
			<field name="name">Buildings</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">a3.building</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[]</field>
			<field name="context">{'group_by': 'school_id'}</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">

				</p>
				<p>

				</p>
			</field>
		</record>
		<record id="action_building_form_view" model="ir.actions.act_window.view">
			<field name="sequence" eval="2"/>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_building_form"/>
			<field name="act_window_id" ref="action_building"/>
		</record>
		<record id="action_building_tree_view" model="ir.actions.act_window.view">
			<field name="sequence" eval="1"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_building_tree"/>
			<field name="act_window_id" ref="action_building"/>
		</record>
	</data>
</odoo>