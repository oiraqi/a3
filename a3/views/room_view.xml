<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="view_room_form" model="ir.ui.view">
			<field name="name">a3.room.form</field>
			<field name="model">a3.room</field>
			<field name="arch" type="xml">
				<form string="Room">
					<sheet>
						<h1>
							<field name="name"/>
						</h1>
						<group name="info" string="General Information" col="4">
							<field name="school_id" string="Owner" options="{'no_quick_create': True, 'no_create_edit': True}"/>
							<field name="type"/>
							<field name="building_id" domain="[('school_id', '=', school_id)]" options="{'no_quick_create': True, 'no_create_edit': True}"/>
							<field name="number"/>
							<field name="capacity"/>
						</group>
						<group name="log" string="Log" col="4">
							<field name="create_uid"/>
							<field name="create_date"/>
							<field name="write_uid"/>
							<field name="write_date"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_room_tree" model="ir.ui.view">
			<field name="name">a3.room.tree</field>
			<field name="model">a3.room</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<tree string="Rooms">
					<field name="number"/>
					<field name="capacity"/>
					<field name="type" invisible="1"/>
					<field name="building_id" invisible="1"/>
					<field name="school_id" invisible="1"/>
				</tree>
			</field>
		</record>
		<record id="action_room" model="ir.actions.act_window">
			<field name="name">Rooms</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">a3.room</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[]</field>
			<field name="context">{'group_by': ['school_id', 'building_id', 'type']}</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">

				</p>
				<p>

				</p>
			</field>
		</record>
		<record id="action_room_form_view" model="ir.actions.act_window.view">
			<field name="sequence" eval="2"/>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_room_form"/>
			<field name="act_window_id" ref="action_room"/>
		</record>
		<record id="action_room_tree_view" model="ir.actions.act_window.view">
			<field name="sequence" eval="1"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_room_tree"/>
			<field name="act_window_id" ref="action_room"/>
		</record>
	</data>
</odoo>