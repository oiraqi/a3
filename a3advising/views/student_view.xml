<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- a3.student inherit form view -->
        <record id="view_student_form_advising" model="ir.ui.view">
            <field name="name">a3.student.inherit.view.form</field>
            <field name="model">a3.student</field>
            <field name="inherit_id" ref="a3.view_student_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='school_id']" position="after">
                    <field name="program_id" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                    <field name="advisor_id" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                </xpath>                
            </field>
        </record>

        <record id="view_student_tree_advising" model="ir.ui.view">
            <field name="name">a3.student.inherit.view.form</field>
            <field name="model">a3.student</field>
            <field name="inherit_id" ref="a3.view_student_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="advisor_id"/>
                </xpath>                
            </field>
        </record>

        <record id="a3.action_student" model="ir.actions.act_window">
            <field name="name">Students</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">a3.student</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'group_by': ['school_id', 'program_id']}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Create a student
                </p>
                <p>
                Once saved, you will have a button that will alow you to send a password initialization email.
                </p>
            </field>
        </record>
        
    </data>

</odoo>