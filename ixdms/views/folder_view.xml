<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="view_folder_form" model="ir.ui.view">
			<field name="name">ixdms.folder.form</field>
			<field name="model">ixdms.folder</field>
			<field name="arch" type="xml">
				<form string="Folder">
					<sheet>
						<b>Folder</b>
						<h1><field name="name" default_focus="1" placeholder="Name..." style="width: 50%"/></h1>
						<group name="documents" string="Documents" col="4">
							<field name="document_ids" nolabel="1">
								<tree editable="bottom">
									<field name="name"/>
									<field name="file" widget="binary"/>
									<field name="url" widget="url"/>
									<field name="favorite"/>
								</tree>
							</field>
						</group>
						<group name="sub-folders" string="Sub-Folders" col="4">
							<field name="folder_ids" nolabel="1">
								<tree editable="bottom">
									<field name="name"/>
									<field name="nfolders"/>
									<field name="ndocuments"/>
									<button icon="fa-folder-open" name="open" type="object"/>
								</tree>
							</field>
						</group>
						<group name="log" string="Log" col="4">
							<field name="create_uid"/>
							<field name="create_date"/>
							<field name="write_uid"/>
							<field name="write_date"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_folder_tree" model="ir.ui.view">
			<field name="name">ixdms.folder.tree</field>
			<field name="model">ixdms.folder</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<tree string="Folders">
					<field name="name"/>
					<field name="nfolders"/>
					<field name="ndocuments"/>
				</tree>
			</field>
		</record>
		<record id="action_folder" model="ir.actions.act_window">
			<field name="name">Folders</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">ixdms.folder</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('parent_id', '=', False)]</field>
			<field name="context">{}</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
				
				</p>
				<p>
				
				</p>
			</field>
		</record>
		<record id="action_folder_open" model="ir.actions.act_window">
			<field name="name">Folders</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">ixdms.folder</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[]</field>
			<field name="context">{}</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
				
				</p>
				<p>
				
				</p>
			</field>
		</record>
		<record id="action_folder_form_view" model="ir.actions.act_window.view">
			<field name="sequence" eval="2"/>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_folder_form"/>
			<field name="act_window_id" ref="action_folder"/>
		</record>
		<record id="action_folder_tree_view" model="ir.actions.act_window.view">
			<field name="sequence" eval="1"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_folder_tree"/>
			<field name="act_window_id" ref="action_folder"/>
		</record>
	</data>
</odoo>