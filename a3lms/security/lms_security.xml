<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
    
        <record id="faculty_lms_course_rule" model="ir.rule">
            <field name="name">Restrict access to own LMS courses</field>
            <field name="model_id" ref="model_a3lms_course"/>
            <field name="domain_force">[('section_id.instructor_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('a3.group_faculty'))]"/>
        </record>
        <record id="student_lms_course_rule" model="ir.rule">
            <field name="name">Restrict access to own LMS courses</field>
            <field name="model_id" ref="model_a3lms_course"/>
            <field name="domain_force">[('section_id.student_ids.ids', 'in', user.student_id.id)]</field>
            <field name="groups" eval="[(4, ref('a3.group_student'))]"/>
        </record>
    </data>
    
</odoo>