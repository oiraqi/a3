<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- a3.course inherit form view -->
        <record id="view_course_form_lms" model="ir.ui.view">
            <field name="name">a3.course.inherit.lms.view.form</field>
            <field name="model">a3.course</field>
            <field name="inherit_id" ref="a3catalog.view_course_form_catalog"/>
            <field name="arch" type="xml">                
                <xpath expr="//group[@name='desc_ilos_syllabus']" position="after">                    
                    <group name="textbooks" string="Textbooks" col="4">
                        <field name="textbook_ids" nolabel="1">
                            <tree>
                                <field name="thumbnail"/>
                                <field name="name"/>
                                <field name="authors"/>
                                <field name="publisher"/>
                                <field name="edition"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>