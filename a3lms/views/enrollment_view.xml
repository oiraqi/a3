<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- a3roster.enrollment inherit form view -->
        <record id="view_enrollment_form_lms" model="ir.ui.view">
            <field name="name">a3roster.enrollment.inherit.lms.view.form</field>
            <field name="model">a3roster.enrollment</field>
            <field name="inherit_id" ref="a3roster.view_enrollment_form"/>
            <field name="arch" type="xml">                               
                <xpath expr="//group[@name='info']" position="after">
                    <group name="student_info" string="Student Performance" col="4">
                        <field name="program_id"/>
                        <field name="attendance_mode" widget="badge"/>
                        <field name="email"/>
                    </group>
                    <group name="student_performance" string="Student Performance" col="3">
                        <field name="attendance_grade" widget="percentpie" nolabel="1"/>
                        <field name="assessment_grade" widget="percentpie" nolabel="1"/>
                        <field name="overall_grade" widget="percentpie" nolabel="1"/>
                        <field name="letter_grade" colspan="3"/>
                    </group>
                    <notebook>
                        <page string="Attendance" name="attendance" col="4">
                            <group>
                                <field name="attendance_rate"/>
                                <field name="nabsences"/>
                                <field name="attendance_line_absent_ids" nolabel="1" colspan="4">
                                    <tree>
                                        <field name="day"/>
                                        <field name="excused"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Assessment" name="assessment">
                            <group>
                                <field name="assessment_line_ids" nolabel="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="module_id"/>
                                        <field name="technique_id" widget="badge"/>
                                        <field name="bgrade"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>
        <record id="view_enrollment_tree" model="ir.ui.view">
            <field name="name">a3roster.enrollment.tree</field>
            <field name="model">a3roster.enrollment</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Entollments">
                    <field name="student_id"/>
                    <field name="sid"/>
                    <field name="attendance_mode" widget="badge"/>
                    <field name="email"/>
                    <field name="state" widget="badge"/>
                    <field name="attendance_rate" string="Attendance Rate (%)"/>
                    <field name="nabsences"/>
                    <field name="attendance_grade" string="Attendance Grade (%)"/>
                    <field name="assessment_grade" string="Assessment Grade (%)"/>
                    <field name="overall_grade" string="Overall Grade (%)"/>
                    <field name="letter_grade"/>
                    <field name="program_id" invisible="1"/>
                </tree>
            </field>
        </record>
        <record id="action_enrollment" model="ir.actions.act_window">
            <field name="name">Students</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">a3roster.enrollment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'group_by': 'program_id'}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">

                </p>
                <p>

                </p>
            </field>
        </record>
        <record id="action_enrollment_tree_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_enrollment_tree"/>
            <field name="act_window_id" ref="action_enrollment"/>
        </record>
    </data>
</odoo>