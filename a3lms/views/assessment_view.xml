<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="view_assessment_form" model="ir.ui.view">
			<field name="name">a3lms.assessment.form</field>
			<field name="model">a3lms.assessment</field>
			<field name="arch" type="xml">
				<form string="Assessment" create="false" delete="false">
					<sheet>
						<div class="oe_title">
							<h1>
								<field name="name" default_focus="1" placeholder="Name..."/>
							</h1>
						</div>
						<div class="oe_button_box" name="button_box">
							<button name="get_assessment_lines" type="object" class="oe_stat_button" icon="fa-">
								<field name="submissions" string="Submissions" widget="statinfo"/>
							</button>
						</div>
						<group name="info" string="Description" col="4">
							<field name="description" nolabel="1"/>
						</group>
						<group name="submission" string="Submission" col="4">
							<field name="submission_type" string="Type"/>
							<field name="due_time"/>
							<field name="from_time"/>
							<field name="to_time"/>
							<field name="teamwork" widget="boolean_toggle"/>
							<field name="team_ids" attrs="{'invisible': [('teamwork', '=', False)]}"
								context="{'default_course_id': course_id}">
								<tree>
									<field name="name"/>
									<field name="member_ids" widget="many2many_tags"/>
									<field name="course_id" invisible="1"/>
								</tree>
							</field>
							<field name="course_id" invisible="1"/>
						</group>
						<group name="bonus_penalty" string="Bonus &#38; Penalty" col="4">
							<field name="bonus" style="width: 15%"/>
							<field name="penalty_per_late_day" style="width: 15%"/>
						</group>
						<group name="stats" string="Statistics" col="4">
							<field name="max_grade"/>
							<field name="min_grade"/>
							<field name="avg_grade"/>
							<field name="stdev"/>
						</group>
						<group name="log" string="Log" col="4">
							<field name="create_uid"/>
							<field name="create_date"/>
							<field name="write_uid"/>
							<field name="write_date"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
